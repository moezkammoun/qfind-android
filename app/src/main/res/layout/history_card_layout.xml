<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_5"
        android:layout_marginStart="@dimen/padding_5"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardElevation="@dimen/padding_3"
        card_view:cardMaxElevation="@dimen/card_elevation"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/history_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/history_thumbnail"
                android:layout_width="@dimen/category_thumbnail_width"
                android:layout_height="@dimen/category_thumbnail_height"
                 />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/alignment_padding"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/history_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/search_results_item_text" />

                <TextView
                    android:id="@+id/history_item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/searchResultsDescriptionColor"
                    android:textSize="@dimen/search_results_item_text_description" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
